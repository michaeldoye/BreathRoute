# BreatheRoute Local Development Configuration
# Copy this file to .env and adjust values as needed

# Application
APP_ENV=development
APP_PORT=8080
APP_LOG_LEVEL=debug
APP_LOG_FORMAT=text

# Database (PostgreSQL + PostGIS)
DB_HOST=localhost
DB_PORT=5432
DB_USER=breatheroute
DB_PASSWORD=localdev
DB_NAME=breatheroute
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SIGNING_KEY=local-dev-signing-key-change-in-production
JWT_EXPIRY=24h

# Development Mode (enables /v1/auth/dev endpoint - NEVER enable in production)
AUTH_DEV_MODE=true

# Apple Sign In (get from Apple Developer Portal)
APPLE_TEAM_ID=
APPLE_CLIENT_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY_PATH=

# APNs Push Notifications (get from Apple Developer Portal)
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=
APNS_BUNDLE_ID=nl.breatheroute.app
APNS_ENVIRONMENT=development

# External API Keys
LUCHTMEETNET_API_URL=https://api.luchtmeetnet.nl/open_api
NS_API_KEY=
NS_API_URL=https://gateway.apiportal.ns.nl
POLLEN_API_KEY=
POLLEN_API_URL=https://api.breezometer.com
WEATHER_API_KEY=
WEATHER_API_URL=
OPENROUTESERVICE_API_KEY=

# Feature Flags
FEATURE_TRANSIT_MODE=false
FEATURE_POLLEN_ALERTS=false
FEATURE_TIME_SHIFT=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# TLS Enforcement (enable in production - Cloud Run handles TLS termination)
REQUIRE_TLS=false

# Observability (run 'make dev-observability' first to start Jaeger/Prometheus/Grafana)
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317
OTEL_SERVICE_NAME=breatheroute-api

# SMTP (use MailHog locally: docker compose --profile tools up mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@breatheroute.local
